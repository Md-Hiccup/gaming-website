<% if( headMain == '0' ){ %>
<%  include headerlogin%>
<% } else { %>
<% include header %>
<% } %>
<br>
<div class="container-fluid">
    <div class="col-lg-5 col-lg-offset-3    ">
        <!-- show any messages that come back with authentication -->
        <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
        <% } %>

        <div class="card">
            <div class="row">
                <div class = "ct-green">
                    <h5 class="control-label center"><b>Signup Form<hr></b></h5>
                </div>
                <form class="col s12" method="post">
                    <div class="row form-group">
                        <div class="input-field col s6 light-green-text">
                            <i class="material-icons prefix">account_circle</i>&ensp;
                            <input id="first_name" name="first_name" type="text" class="validate" required>
                            <label for="first_name">First Name</label>
                        </div>
                        <div class="input-field col s6 light-green-text">
                            <i class="material-icons prefix"></i>&ensp;
                            <input id="last_name" name="last_name" type="text" class="validate" required>
                            <label for="last_name">Last Name</label>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="input-field col s12 amber-text">
                            <label>Gender : </label>
                            <p class="input-field col s6 push-s2 amber-text">
                                <input class="with-gap" type="radio" name="gender" id="male">
                                <label for="male">Male</label>
                            </p>
                            <p class="input-field col s6 amber-text">
                                <input class="with-gap" type="radio" name="gender" id="female">
                                <label for="female">Female</label>
                            </p>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="input-field col s12 light-green-text">
                            <i class="material-icons prefix">email</i>&ensp;
                            <input id="email" type="email" name='email' class="validate" required>
                            <label for="email">Email</label>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="input-field col s12 light-green-text">
                            <i class="material-icons prefix">lock</i>&ensp;
                            <input id="password" type="password" name='password' class="validate" required>
                            <label for="password">Password</label>
                        </div>
                    </div>
                    <div class="row center">
                        <!--  <a id="signup" class="light-green waves-effect waves-light white-text btn-round btn-lg" >SIGN UP</a>-->
                        <button type="submit" id='signup'  class="light-green waves-effect waves-light white-text btn-round btn-lg">Signup</button>
                    </div>
                </form>
                <hr>
                <div class = "row center">
                    <p>Already have an account? <a href="login">Login</a></p>
                    <p>Or go <a href="/">Home</a>.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<% include footer %>